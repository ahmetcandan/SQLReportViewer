@model IEnumerable<SQLReportViewer.Data.Model.DbConnection>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ConnectionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConnectionString)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDelete)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ConnectionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConnectionString)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDelete)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DbConnectionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DbConnectionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DbConnectionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
