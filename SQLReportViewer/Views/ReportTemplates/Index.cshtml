@model IEnumerable<SQLReportViewer.Data.Model.ReportTemplate>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TemplateName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DbConnection)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TemplateName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DbConnection.ConnectionName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ReportTemplateId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.ReportTemplateId">Delete</a> |
                <a asp-action="Index" asp-controller="ReportViewers" asp-route-query="id:@item.ReportTemplateId">View</a>
            </td>
        </tr>
}
    </tbody>
</table>
